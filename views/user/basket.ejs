<div class="shop">
    <h1 class="shop__heading">Basket</h1>
</div>


<section class="products">
    <ul class="products-ul">
        <li>
            <a href="/user">
                <span>Product</span>
                <span>Quantity</span>
                <span>Price</span>
            </a>
        </li>
        <% data.forEach(item => { %>
            <li>
                <a href="/item/<%= item.id %>">
                    <span class="category__name"><%= item.name %></span>
                    <span class="category__name"><%=item.quantity%></span>
                    <span class="category__name"><%=item.price * item.quantity%></span>
                </a>
            </li>
        <% }) %>
    </ul>
</section>

<form action="/order" method="POST">
    <input type="submit" value="Order" class="btn">
</form>